@model MLSApplication.Models.Sportsman

@{
    ViewBag.Title = "Delete";
}
<br />
<h2>
    Delete
    <small class="text-muted">portsman</small>
</h2>
<hr />
<h2><small class="text-muted">Are you sure you want to delete this?</small></h2>
<div>
    <br />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            Lastname
        </dt>

        <dd>
            @Html.DisplayFor(model => model.lastname)
        </dd>

        <dt>
            Salary
        </dt>

        <dd>
            @Html.DisplayFor(model => model.salary)
        </dd>

        <dt>
            Position
        </dt>

        <dd>
            @Html.DisplayFor(model => model.position)
        </dd>

        <dt>
            Futbol Team
