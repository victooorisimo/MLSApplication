        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <button type="button" onclick="location.href='@Url.Action("Index", "Sportsman")'" class="btn btn-primary">Back to list</button>
